<div class='d-flex justify-content-center row'>
  {{#each blogs as |blog|}}
    <div class='col-10'>
      <a href='/blog/{{blog.id}}'><div class='card m-4'>
          <div class='card-header d-flex justify-content-between'>
            <h3>{{blog.title}}</h3>
            <div>
              <p>Created by
                {{blog.user.name}}
                on
                {{formatDate blog.date_created}}</p></div>
          </div>
          <div class='card-footer'>

            <p class='card-text my-3'>{{blog.content}}</p></div>
        </div>
      </a>
    </div>
  {{/each}}

</div>