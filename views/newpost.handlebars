<h4>{{name}}'s Dashboard</h4>

<div id='blogPostForm'>
  <div class='card'>
    <div class='card-header'>Create A Post</div>
    <div class="'card-body">
      <form class='post-form'>
        <div class='mb-3 form-group'>
          <label for='title' class='form-label'>Title</label>
          <input type='text' class='form-input' id='title' />

        </div>
        <div class='mb-3'>
          <label for='content' class='form-label'>Content</label>
          <textarea class='form-input' id='content' name='content'>

          </textarea>
        </div>
        <div>

          <button
            type='submit'
            class='btn btn-primary'
            id='createPost'
          >Create</button>

        </div>
      </form>
    </div>

  </div>
</div>

<script src='/js/dashboard.js'></script>