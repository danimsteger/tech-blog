<div class=''>
  <div class='d-flex justify-content-center'>
    <div class='card col-10 m-2'>
      <div class='card-header d-flex justify-content-between'>
        <h3>{{title}}</h3>
        <div>
          <p>Created by
            {{user2.name}}
            on
            {{formatDate date_created}}</p></div>
      </div>

      <div class='card-footer'>
        <p class='card-text my-3'>{{content}}</p>
      </div>

    </div>
  </div>

  <div class='row d-flex justify-content-center'>
    {{#each comments as |comment|}}

      <div class='card col-9 m-2'>
        <div class='card-body'>
          <div class='d-flex row align-items-center mt-2'>
            <p class='card-text'>{{comment.content}}</p>
            <p>
              -
              {{comment.user2.name}}
              {{formatDate comment.date_created}}</p>
          </div>
        </div>
      </div>
    {{/each}}
  </div>

  <div class='d-flex justify-content-center'>
    {{#if logged_in}}
      <div class='card col-9 m-4'>
        <div class='card-header'>Add A Comment</div>
        <div class='card-footer'>
          <form class='comment-form'>
            <div class='m-4'>
              <textarea
                class='form-control'
                id='comment'
                name='comment'
              ></textarea>
            </div>
            <button type='submit' class='btn btn-primary mx-4'>Submit</button>

          </form>
        </div>

      </div>

    {{/if}}
  </div>
</div>

<script src='/js/comment.js'></script>