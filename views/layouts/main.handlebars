<html lang='en'>

  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>TECH BLOGS!!</title>
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH'
      crossorigin='anonymous'
    />
    <link rel='stylesheet' href='/css/style.css' />

  </head>

  <body class='bg-danger'>
    <header class='display-flex justify-space-between align-center'>
      <nav class='navbar navbar-expand-lg bg-primary p-3'>
        <div class='container-fluid d-flex justify-content-between'>
          <div><a class='navbar-brand' href='/'><h3 class='text-light'>The Tech
                Blog</h3></a>
          </div>
          <div>
            <button
              class='navbar-toggler'
              type='button'
              data-bs-toggle='collapse'
              data-bs-target='#navbarNav'
              aria-controls='navbarNav'
              aria-expanded='false'
              aria-label='Toggle navigation'
            >
              <span class='navbar-toggler-icon'></span>
            </button>
            <div class='collapse navbar-collapse' id='navbarNav'>
              <ul class='navbar-nav'>
                <li class='nav-item'>
                  <a class='nav-link' aria-current='page' href='/'>Home</a>
                </li>
                <li class='nav-item'>
                  <a class='nav-link' href='/dashboard'>Dashboard</a>
                </li>
                {{#if logged_in}}

                  <li class='nav-item'>
                    <a class='nav-link' id='logout-nav'>Logout</a>
                  </li>
                {{else}}
                  <li class='nav-item'>
                    <a class='nav-link' id='login-nav' href='/login'>Login</a>
                  </li>
                {{/if}}

              </ul>
            </div>
          </div>
        </div>
      </nav>
    </header>
    <main class='container-fluid pt-5 bg-danger'>
      {{{body}}}
    </main>
    <footer class='footer text-center p-5 bg-danger h-100'>
      <h5>Created By Danielle Steger</h5>
    </footer>
    <script
      src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js'
      integrity='sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz'
      crossorigin='anonymous'
    ></script>

    {{#if logged_in}}

      <script src='/js/logout.js'></script>
    {{/if}}

    <script>
      {{#if logged_in}}
        let loggedIn = true;
      {{else}}
        let loggedIn = false;
      {{/if}}
    </script>
  </body>

</html>